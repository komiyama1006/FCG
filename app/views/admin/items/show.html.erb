<h1>商品詳細</h1>

<div class="container">
	<div class="row">

		<table align="center">
			<thead>
				<tr>
					<th><%= attachment_image_tag @frame, :image, :fill, 400, 400 %></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><p><%= @frame.name %></p></td>
				</tr>
				<tr>
					<td><p><%= @frame.color %></p></td>
				</tr>
				<tr>
					<td><p><%= @frame.body %></p></td>
				</tr>

			</tbody>
		</table>

		<div align="center">
			<!-- 編集ページに遷移 -->
			<p><%= link_to "編集", edit_admin_item_path %></p><br>

			<p><%= link_to "削除", admin_item_path(@frame), method: :delete %></p><br>
		</div>
	</div>
</div>