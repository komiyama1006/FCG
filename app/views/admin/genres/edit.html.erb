<div class="container">
	<h1>ジャンル編集画面</h1>
	<%= form_for(@genre,url:"/admin/genres/#{@genre.id}") do |f|%>

		<b>ジャンル</b>
		<%= f.text_field :name %>

		<%= f.radio_button :is_valid ,true %>
		<%= label_tag :is_valid, "レンタル可能" %>

		<%= f.radio_button :is_valid ,false %>
		<%= label_tag :is_vaild,"レンタル中" %>

		<%= f.submit "変更を保存する" ,class:"btn btn-primary"%>

	<% end %>
</div>