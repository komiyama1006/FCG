<div class="container">
	<h2>ジャンル追加・一覧</h2>
	<%= form_for(@genre,url:"/admin/genres") do |f| %>
		<b>ジャンル</b>
		<%= f.text_field :name %>

		<%= f.radio_button :is_valid, true %>
		<%= label_tag :is_valid, "レンタル可能" %>

		<%= f.radio_button :is_valid, false %>
		<%= label_tag :is_vaild,"レンタル中" %>

		<%= f.submit "追加",class:"btn btn-info" %>
	<% end %>

	<div class="row">
		<div class="col-xs-6">
			<table class="table table-bordered">
				<thead style="background-color: #33CCFF;">
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td>
								<p><%= genre.name %></p>
							</td>
							<td>
								<%if genre.is_valid == true %>
									<p>有効</p>
								<% else %>
									<p>無効</p>
								<%end%>
							</td>
								<td class="text-center">
									<%= link_to "編集する",edit_admin_genre_path(genre.id),class:"btn btn-primary" %>
								</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>


